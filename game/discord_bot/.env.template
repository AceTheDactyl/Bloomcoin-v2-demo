# BloomQuest Discord Bot Configuration Template
# Copy this file to .env and fill in your values

# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
BOT_PREFIX=!
# Get your bot token from: https://discord.com/developers/applications

# Database Configuration
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/bloomquest
# Or SQLite (for development)
# DATABASE_URL=sqlite:///bloomquest.db

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
# If not using Redis, bot will work without caching

# Bot Settings
STARTING_BALANCE=100.0
MINING_COOLDOWN=60  # seconds
MAX_COMPANIONS=7
MAX_GARDEN_PLOTS=9

# Feature Flags
ENABLE_WEB_DASHBOARD=false
ENABLE_VOICE_FEATURES=false
ENABLE_ANALYTICS=false

# Economy Settings
MINING_BASE_REWARD=10.0
BATTLE_WIN_REWARD=50.0
DAILY_REWARD=100.0
PATTERN_BASE_PRICE=5.0

# Quantum Settings
QUANTUM_TAU=10.1736  # 2πφ
QUANTUM_R_DARK=5.854  # φ⁴ - 1
QUANTUM_COHERENCE_DECAY=3600  # seconds

# Learning Module Settings
LEARNING_XP_MULTIPLIER=1.5
LEARNING_BC_MULTIPLIER=1.0
CORRECT_ANSWER_BONUS=10

# Discord API Settings
MAX_MESSAGE_LENGTH=2000
EMBED_COLOR=0x00ff00  # Green
ERROR_COLOR=0xff0000  # Red

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=bot.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Development Settings
DEBUG_MODE=false
TEST_GUILD_ID=  # Optional: Guild ID for testing slash commands

# API Keys (for future features)
OPENAI_API_KEY=  # For AI-enhanced companion dialogue
WEATHER_API_KEY=  # For environmental effects
CRYPTO_API_KEY=  # For real crypto price integration

# Web Dashboard Settings (if enabled)
WEB_PORT=5000
WEB_HOST=0.0.0.0
SECRET_KEY=generate_a_random_secret_key_here
SESSION_TYPE=filesystem

# Performance Settings
COMMAND_TIMEOUT=30  # seconds
MAX_CONCURRENT_MINES=100
CACHE_TTL=300  # seconds
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Anti-Spam Settings
RATE_LIMIT_COMMANDS=5  # commands per
RATE_LIMIT_WINDOW=10  # seconds
SPAM_PUNISHMENT_DURATION=60  # seconds

# Market Settings
MARKET_FEE_PERCENT=5.0
MIN_MARKET_PRICE=0.01
MAX_MARKET_PRICE=1000000.0
LISTING_DURATION=604800  # 7 days in seconds

# Battle Settings
BATTLE_TIMEOUT=300  # 5 minutes
MAX_DECK_SIZE=30
MIN_DECK_SIZE=20
TURN_TIME_LIMIT=60  # seconds

# Companion Settings
COMPANION_XP_PER_MINE=10
COMPANION_XP_PER_BATTLE=25
COMPANION_XP_PER_LEARN=15
RELATIONSHIP_PET_BONUS=5
RELATIONSHIP_DECAY_RATE=1  # per day

# Garden Settings
CROP_GROWTH_TIME=3600  # 1 hour
QUANTUM_GROWTH_MULTIPLIER=2.0
HARVEST_COOLDOWN=300  # 5 minutes
COMPOST_REWARD=5.0

# Pattern Discovery Settings
PATTERN_DISCOVERY_CHANCE=0.1  # 10%
RARE_PATTERN_CHANCE=0.01  # 1%
PATTERN_STACK_LIMIT=9999

# Notification Settings
NOTIFICATION_MINING_COMPLETE=true
NOTIFICATION_BATTLE_CHALLENGE=true
NOTIFICATION_MARKET_SOLD=true
NOTIFICATION_GARDEN_READY=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups/

# Security Settings
REQUIRE_ACCOUNT_AGE=86400  # 1 day
REQUIRE_GUILD_MEMBER=true
ADMIN_IDS=123456789,987654321  # Comma-separated Discord user IDs
BLACKLIST_ENABLED=false
BLACKLIST_FILE=blacklist.txt

# Monitoring
METRICS_ENABLED=false
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60  # seconds
ALERT_WEBHOOK_URL=  # Discord webhook for alerts

# Integration Settings
ENABLE_NEXTHASH_VALIDATION=true
ENABLE_QUANTUM_RESIDUE=true
ENABLE_LSB_ENCODING=true
ENABLE_PATTERN_RECIPES=true

# External Services
CDN_URL=  # For hosting images/assets
API_BASE_URL=  # For future API
DOCS_URL=https://github.com/your-repo/wiki